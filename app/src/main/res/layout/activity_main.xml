<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.MainActivity">

    <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Database responce"/>
    <Button
            android:text="Insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnInsert"/>
    <Button
            android:text="Find by ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnFindById"/>
    <Button
            android:text="Find by key/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnFindByKeyValue"/>
    <Button
            android:text="Find by query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnFindByQuery"/>
    <Button
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnDelete"/>

</androidx.appcompat.widget.LinearLayoutCompat>